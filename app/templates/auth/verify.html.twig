{% extends 'base.html.twig' %}

{% block title %}Verify OTP{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Verify OTP</h2>

                    <div class="alert alert-info mb-4" role="alert">
                        A 6-digit code has been sent to <strong>{{ phone_number }}</strong> via WhatsApp.
                        <br>
                        <small>Code expires in {{ (expires_in / 60)|round }} minutes</small>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-4">
                            <label for="otp_code" class="form-label">OTP Code</label>
                            <input
                                type="text"
                                class="form-control form-control-lg text-center"
                                id="otp_code"
                                name="otp_code"
                                placeholder="000000"
                                maxlength="6"
                                pattern="[0-9]{6}"
                                required
                                autofocus
                                style="letter-spacing: 0.5em; font-size: 2rem;"
                            >
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Verify & Login
                            </button>
                            <a href="{{ path('auth_login') }}" class="btn btn-outline-secondary">
                                Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
