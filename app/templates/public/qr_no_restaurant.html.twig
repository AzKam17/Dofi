{% extends 'base_simple.html.twig' %}

{% block title %}Page en préparation{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-white p-4">
    <div class="max-w-md w-full">
        <div class="text-center">
            <div class="inline-flex items-center justify-center w-32 h-32 border-4 border-black rounded-lg mb-8">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-black">
                    <rect width="5" height="5" x="3" y="3" rx="1"/>
                    <rect width="5" height="5" x="16" y="3" rx="1"/>
                    <rect width="5" height="5" x="3" y="16" rx="1"/>
                    <path d="M21 16h-3a2 2 0 0 0-2 2v3"/>
                    <path d="M21 21v.01"/>
                    <path d="M12 7v3a2 2 0 0 1-2 2H7"/>
